{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "types/*": ["./src/types/*"],
      "@screens/*": ["./src/screens/*"],
      "@features/*": ["./src/features/*"],
      "@components/*": ["./src/components/*"]
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  }
}
